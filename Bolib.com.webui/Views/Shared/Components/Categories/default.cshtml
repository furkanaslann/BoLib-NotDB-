@model List<Category>
<div class="list-group">
    @foreach (var category in Model)
    {
        <a href="/book/list/@category.CategoryId" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == category.CategoryId.ToString()?"active": "")">@category.CategoryName</a> @*asp-controller="Book" asp-action="List" asp-route-id="@category.CategoryId"*@
    }
</div>