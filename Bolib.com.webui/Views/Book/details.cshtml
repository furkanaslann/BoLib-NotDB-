@model Book
@section Categories{ 
    @await Component.InvokeAsync("Categories")
}

<div class="card mb-3">
    <div class="card-body">
        <div class="row no-gutters">
            <div class="col-md-3">
                <img src="@Model.ImageUrl" class="card-img">
            </div>
            <div class="col-md-9" style="padding-left: 15px;">
                <h5 class="card-title">@Model.BookName</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">Price: @Model.Price €</p>
                <p class="card-text">
                    <small class="text-muted">3 days ago</small>
                </p>
            </div>
        </div>
    </div>

</div>