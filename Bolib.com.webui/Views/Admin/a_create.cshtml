@model Book
@{
    Layout = "_LayoutAdmin";
}

<form method="post" enctype="application/x-www-form-urlencoded">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="BookName" value="@Model.BookName" class="form-control">
        <span asp-validation-for="BookName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input asp-for="Price" value="@Model.Price" class="form-control">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" value="@Model.Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ImageUrl">Image:</label>
        <input asp-for="ImageUrl" type="hidden">
        <img src="~/img/@Model.ImageUrl" width="80" height="100"/>
        <input type="file" name="file"/>
    </div>
    <div class="form-group">
        <label for="CategoryId">CategoryId</label>
        <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control">
            <option selected disabled>-Select-</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mb-3">Submit</button>
</form>
